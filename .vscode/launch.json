    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/hab/svc/php-runtime/var/site/php-classes/Slate/Connectors/GSuite": "${workspaceFolder}/php-classes/Slate/Connectors/GSuite",
                "/hab/svc/php-runtime/var/site/php-classes/Slate": "${workspaceFolder:slate}/php-classes/Slate",
                "/hab/svc/php-runtime/var/site": "${workspaceFolder:slate}",
                // "/src/emergence-php-core": "${workspaceFolder:php-core}"
            },
            "ignore": [
                "**/vendor/**/*"
            ]
        },
    ]
}